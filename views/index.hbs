    </section>


    {{!-- website services section  --}}
    <section id="services_section" class="py-3">
        <div class="container">
          <h1 class="text-center">Our Services</h1>
          <div class="row mt-5">

            {{!-- first row and first service colum --}}
            {{#each services}}
            <div class="col-md-4">

              {{!-- cards looping  --}}
               <div class="card">
                 <div class="card-body">
                  <div class="container text-center service_icon">
                   <i class="{{this.icon}}"></i>
                  </div>
                   <h4 class="card-title">{{this.title}}</h4>
                   <p>{{this.description}}</p>
                    <a href="{{this.link}}">{{this.linkText}}</a>
                    <a href="#!" class="ml-5">Support</a>
                 </div>
               </div>
            </div>
            {{/each}}


          </div>
        </div>
    </section>


    {{!-- banner2 section  --}}
