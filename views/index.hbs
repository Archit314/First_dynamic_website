    {{!-- from here contact section will be start  --}}
    <section id="contact_us_section" class="py-5  formbackground">
      <div class="container">
        <h1 class="text-center">Contact Us </h1>
        <div class="row">
          <div class="col-md-12">
            <form action="/process-contact-form" method="post">

              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>

              <div class="mb-3">
                <label for="contactNumberField" class="form-label">Contact Number</label>
                <input name="phone" type="phone" class="form-control" id="contactNumberField">
              </div>

              <div class="form-floating mt-2">
                <textarea name="query" class="form-control" style="height: 14rem;" placeholder="Enter your query if any" id="queryField"></textarea>
                <label for="queryField">Your auery</label>
              </div>

              <div class="container text-center my-4">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
